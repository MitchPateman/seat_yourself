<h1>Edit Restaurant</h1>

<% if current_user %>
	<%= form_for @restaurant do |f| %>
		<% if @restaurant.errors.any? %>
			<div class="error_messages">
				<h2>Form is invalid</h2>
				<ul>
					<% @restaurant.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<div class="field">
			<%= f.label :name %><br>
			<%= f.text_field :name %>
		</div>
		<div class="field">
			<%= f.label :category %><br>
			<%= f.text_field :category  %>
		</div>
		<div class="field">
			<%= f.label :location %><br>
			<%= f.text_field :location %>
		</div>
		<div class="field">
			<%= f.label :logo_url %><br>
			<%= f.text_field :logo_url %>
		</div>
		<div class="field">
			<%= f.label :site_url %><br>
			<%= f.text_field :site_url %>
		</div>
		<div class="field">
			<%= f.label :phone %><br>
			<%= f.telephone_field :phone %>
		</div>
		<div class="field">
			<%= f.label :description %><br>
			<%= f.text_area :description %>
		</div>
		<div class="field">
			<%= f.label :open_hour %><br>
			<%= f.number_field :open_hour %>
		</div>
		<div class="field">
			<%= f.label :close_hour %><br>
			<%= f.number_field :close_hour %>
		</div>
		<div class="field">
			<%= f.label :capacity %><br>
			<%= f.number_field :capacity %>
		</div>
		<div class="submit">
			<%= f.submit %>
		</div>
	<% end %>

<% else %>
	<h2>Please log in to create a Restaurant</h2>
<% end %>


<%= link_to "Back to Current Restaurant", restaurant_path(@restaurant) %>
<%= link_to "Back to All Restaurants", root_path %>
